    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test controllers",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/controllers/",
            "env": {
                "ACK_GINKGO_DEPRECATIONS": "1.16.4"
            }
        },
        {
            "name": "Launch webhook manager",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            // "debugAdapter": "legacy",
            "program": "${workspaceFolder}/main.go",
            "args": ["webhook", "serve"]
        },
        {
            "name": "Launch webhook cert creator",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            // "debugAdapter": "legacy",
            "program": "${workspaceFolder}/main.go",
            "args": ["webhook", "certs"]
        },
        {
            "name": "Launch operator manager",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            // "debugAdapter": "legacy",
            "program": "${workspaceFolder}/main.go",
            "args": ["operator", "serve"]
        },
        {
            "name": "Launch job reschedule manager",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            // "debugAdapter": "legacy",
            "program": "${workspaceFolder}/main.go",
            "args": ["run", "reschedule", "--excludedNodes", ""]
        },
    ]
}
