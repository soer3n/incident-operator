    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test controllers",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/tests/e2e/controller",
            "env": {
                "ACK_GINKGO_DEPRECATIONS": "1.16.4"
            }
        },
        {
            "name": "Test webhooks",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/tests/e2e/webhook",
            "env": {
                "ACK_GINKGO_DEPRECATIONS": "1.16.4"
            }
        },
        {
            "name": "Launch webhook manager",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            // "debugAdapter": "legacy",
            "program": "${workspaceFolder}/main.go",
            "args": ["webhook", "serve", "--cert-dir", "/tmp/k8s-webhook-server/serving-certs/"]
        },
        {
            "name": "Launch webhook cert creator",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            // "debugAdapter": "legacy",
            "program": "${workspaceFolder}/main.go",
            "args": ["webhook", "certs"]
        },
        {
            "name": "Launch operator manager",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            // "debugAdapter": "legacy",
            "program": "${workspaceFolder}/main.go",
            "args": ["operator", "serve"]
        },
        {
            "name": "Launch job reschedule manager",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            // "debugAdapter": "legacy",
            "program": "${workspaceFolder}/main.go",
            "args": ["run", "reschedule", "--excludedNodes", ""]
        },
        {
            "name": "Test quarantine package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/tests/unit/",
            // "args": ["-test.run", "TestUpdateQuarantine"],
            "env": {},
            "showLog": true
        },
        {
            "name": "Test quarantine webhooks",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/tests/e2e/webhook",
            "env": {},
            "showLog": true
        },
    ]
}
